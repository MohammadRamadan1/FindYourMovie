<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_main_wallpaper"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="5dp"
            android:alpha="0.9"
            android:background="#B30E1E"
            android:text="Top movies of the month"
            android:textColor="#FAF9FB"
            android:id="@+id/top_movies"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9">

            <Button
                android:id="@+id/action_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="#3D329E"
                android:text="Action"
                android:textColor="#FAF9FB" />

            <Button
                android:id="@+id/comedy_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="#3D329E"
                android:text="Comedy"
                android:textColor="#FAF9FB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9">

            <Button
                android:id="@+id/romantic_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="#3D329E"
                android:text="Romantic"
                android:textColor="#FAF9FB" />

            <Button
                android:id="@+id/adventure_button"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="#3D329E"
                android:text="Adventure"
                android:textColor="#FAF9FB" />
        </LinearLayout>

    </LinearLayout>
